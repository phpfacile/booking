{
    "name" : "phpfacile/booking",
    "description": "Dummy implementation of a generic booking service",
    "keywords": ["booking"],
    "homepage": "https://github.com/phpfacile/booking",
    "license": "MIT",
    "authors": [
        {
            "name": "PHP Facile!",
            "homepage": "https://www.phpfacile.com/"
        }
    ],
    "require" : {
        "php": "^7.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "3.*"
    },
    "scripts": {
        "cs-check": "phpcs -s src",
        "cs-check-psr": "phpcs -s --standard=PSR1,PSR2 src",
        "cs-check-pear": "phpcs -s --standard=PEAR src",
        "cs-fix": "phpcbf src"
    },
    "autoload": {
        "psr-4": {
          "PHPFacile\\Booking\\": "src/"
        }
    }
}
